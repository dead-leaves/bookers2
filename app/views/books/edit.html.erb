<h1>Editing Book</h1>

  <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>

  <div>
  <p>Title</p>
  <p><%= f.text_field :title %></p>

  <p>Opinion</p>
  <p><%= f.text_area :body %></p>

  <p><%= f.submit 'Update Book' %></p>
  </div>
  <% end %>

<%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %>
