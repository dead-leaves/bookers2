<%= render 'users/usershow', { book: @book, user: @user } %>

<%= render 'users/userbooknew', book: @books %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">
        <tbody>
           <tr>
            <td>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag @book.user.get_profile_image(100, 100) %><br><%= @book.user.name %>
            <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>

            <td>
              <% if @book.user == current_user %>
                <%= link_to edit_book_path(@book.id), class: "btn btn-sm btn-success" do %>Edit<% end %>
              <% end %>
            </td>

            <td>
              <% if @book.user == current_user %>
                <%= link_to  book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" do %>
                  Destroy
                <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

