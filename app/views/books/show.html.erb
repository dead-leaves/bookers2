<h4>Book detail</h4>

<tbody>
  <tr>
    <td><%= image_tag @book.user.get_profile_image(100, 100) %></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><% if @book.user == current_user %>
      <%= link_to "Destroy", book_path(book.id), method: :delete %>
    </td>
  </tr>
</tbody>
