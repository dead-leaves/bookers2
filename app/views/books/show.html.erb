<h2>User info</h2>

<%= image_tag @user.get_profile_image(100, 100) %>

<table>
    <tbody>
        <tr></tr>
        <tr>
            <th>name</th>
            <th><%= @user.name %></th>
        </tr>
        
        <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
        </tr>
    </tbody>
</table>

<div>
  <% if @user == current_user %>
    <%= link_to '編集', edit_user_path(@user.id) %>
  <% end %>
</div>

<%= render 'users/userbooknew', book: @books %>


<h4>Book detail</h4>


<table class="table">
<tbody>
  <tr>
    <td>
      <%= link_to user_path(@user.id) do %>
        <%= image_tag @book.user.get_profile_image(100, 100) %><br><%= @book.user.name %>
      <% end %>
    </td>
    <td><%= link_to @book.title, book_path(@book.id) %></td>
    <td><%= @book.body %></td>
    
    <td><% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book.id) %>
        <% end %>
    </td>
    
    <td><% if @book.user == current_user %>
        <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
        <% end %>
    </td>
  </tr>
</tbody>
</table>
