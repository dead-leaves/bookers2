<h2>User info</h2>

<%= image_tag @user.get_profile_image(100, 100) %>

<table>
    <tbody>
        <tr></tr>
        <tr>
            <th>name</th>
            <th><%= @user.name %></th>
        </tr>
        
        <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
        </tr>
    </tbody>
</table>

<div>
  <% if @user == current_user %>
    <%= link_to '編集', edit_user_path(@user.id) %>
  <% end %>
</div>


<h2>New book</h2>

<%= form_with model: @book do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<p><%= f.submit 'Create Book' %></p>

<% end %>


<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspen="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
    
      <tr>
        <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

