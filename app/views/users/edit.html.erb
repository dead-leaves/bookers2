<h1>User info</h1>

  <% if @user.errors.any? %>
    <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_with model: @user  do |f| %>

<div>
   <label for="inputName">Name</label>
   <p><%= f.text_field :name, id: "user_name", placeholder: "名前" %></p>
</div>

<div>
  <label for="inputImage">Image</label>
  <p><%= f.file_field :profile_image, placeholder: "プロフィール画像",accept: "image/*" %></p>
</div>

<div>
  <label for="user_introduction">Introduction</label>
  <p><%= f.text_area :introduction %></p>
</div>

  <%= f.submit "Update User" %>
<% end %>
